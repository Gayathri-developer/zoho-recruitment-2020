import java.util.Scanner;

public class triangular {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int x=n+1;
		print(x);
	}
	public static void print(int n)
	{
		int a=1,b=1;
		for(int i=0;i<n;i++)
		{
			for(int j=n-1;j>i;j--)
			{
				System.out.print(" ");
			}
			for(int k=1;k<=a;k++)
			{
				System.out.print(Math.abs(k-b));
			}
			a+=2;
			b++;
			System.out.println();
		}
	}

}
